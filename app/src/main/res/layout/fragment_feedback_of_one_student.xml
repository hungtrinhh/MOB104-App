<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.teacher.FeedbackOfOneStudentFragment"
    android:background="@color/bg_primary">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_feedback_of_one_student"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="?android:actionBarSize"
        android:clipToPadding="false"/>

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_toolbar"
        android:elevation="20dp">

        <ImageView
            android:id="@+id/img_feedback_back_of_one_student"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_gravity="start"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/tv_feedback_title_of_one_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh sách thông báo"
            android:textColor="@color/blue_primary"
            android:textSize="22sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_add_feedback_of_one_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:text="Gửi thông báo"
        android:textColor="@color/white"
        app:backgroundTint="@color/blue_primary"
        app:icon="@drawable/ic_notification"
        app:iconTint="@color/white"
        android:minHeight="56dp"/>

</FrameLayout>