<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.teacher.AccountInfoFragment"
    android:background="@color/bg_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="?android:actionBarSize"
        android:orientation="vertical"
        android:paddingHorizontal="8dp">

        <EditText
            android:id="@+id/ed_acc_info_name"
            style="@style/EditText"
            android:hint="Họ và tên"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/ed_acc_info_phone_number"
            style="@style/EditText"
            android:hint="Số điện thoại"
            android:layout_marginVertical="16dp"/>

        <EditText
            android:id="@+id/ed_acc_info_email"
            style="@style/EditText"
            android:hint="Hiện tại chưa có tài khoản Email" />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btn_choose_action_login_google1"
            style="@style/GoogleButton"
            android:text="@string/connectWithGoogle"
            android:visibility="gone"
            />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btn_choose_action_login_google2"
            style="@style/GoogleButton"
            android:text="@string/disConnectWithGoogle"
            android:visibility="gone"

            />

    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_toolbar"
        android:elevation="20dp">

        <ImageView
            android:id="@+id/img_acc_info_back"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:padding="12dp"
            android:layout_gravity="start"
            android:background="?android:selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/tv_create_class_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin tài khoản"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/blue_primary"/>

        <Button
            android:id="@+id/btn_acc_info_save"
            style="@style/ToolbarButton"
            android:text="Lưu"
            android:layout_gravity="end"
            android:layout_marginVertical="4dp"
            android:layout_marginEnd="16dp"
            android:paddingHorizontal="16dp"
            android:enabled="false"
            android:layout_width="wrap_content"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>

</FrameLayout>