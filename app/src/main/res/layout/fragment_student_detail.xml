<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.parent.StudentDetailFragment">

    <include layout="@layout/item_student_detail"/>

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_toolbar"
        android:elevation="20dp">

        <ImageView
            android:id="@+id/img_parent_student_detail_back"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_gravity="start"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/tv_parent_student_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin chi tiết"
            android:textColor="@color/blue_primary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_parent_student_detail_noti"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_gravity="end"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_notification" />
    </androidx.appcompat.widget.Toolbar>

</FrameLayout>