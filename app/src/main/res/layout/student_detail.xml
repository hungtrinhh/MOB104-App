<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/blue_primary"
    app:cardCornerRadius="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="2">
                    <ImageView
                        android:id="@+id/img_student_detail_edit"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_edit"
                        android:padding="8dp"
                        android:layout_gravity="end"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:paddingHorizontal="16dp"
                    android:layout_marginVertical="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Họ tên:"
                        android:textSize="18sp"
                        android:textColor="@color/blue_primary"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tv_student_detail_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/blue_primary"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="8dp"
                    android:paddingHorizontal="16dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Ngày sinh:"
                        android:textSize="18sp"
                        android:textColor="@color/blue_primary"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tv_student_detail_dob"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/blue_primary"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="8dp"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="24dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Giới tính:"
                        android:textSize="18sp"
                        android:textColor="@color/blue_primary"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tv_student_detail_gender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/blue_primary"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="119dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Điểm DGTX: "
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_student_detail_regular_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="9.7"
                    android:textSize="12sp"
                    android:textColor="@color/blue_primary"
                    android:textAlignment="center"
                    android:paddingVertical="11dp"
                    android:background="@drawable/bg_score"
                    android:layout_marginHorizontal="8dp"/>

                <TextView
                    android:id="@+id/tv_student_detail_regular_2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="9.7"
                    android:textSize="12sp"
                    android:textColor="@color/blue_primary"
                    android:textAlignment="center"
                    android:paddingVertical="11dp"
                    android:background="@drawable/bg_score"
                    android:layout_marginHorizontal="8dp"/>

                <TextView
                    android:id="@+id/tv_student_detail_regular_3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="9.7"
                    android:textSize="12sp"
                    android:textColor="@color/blue_primary"
                    android:textAlignment="center"
                    android:paddingVertical="11dp"
                    android:background="@drawable/bg_score"
                    android:layout_marginHorizontal="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginVertical="16dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Điểm giữa kỳ: "
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tv_student_detail_midterm"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="9.7"
                    android:textSize="12sp"
                    android:textColor="@color/blue_primary"
                    android:textAlignment="center"
                    android:paddingVertical="11dp"
                    android:background="@drawable/bg_score"
                    android:layout_marginHorizontal="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Điểm cuối kỳ: "
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_student_detail_final"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="9.7"
                    android:textSize="12sp"
                    android:textColor="@color/blue_primary"
                    android:textAlignment="center"
                    android:paddingVertical="11dp"
                    android:background="@drawable/bg_score"
                    android:layout_marginHorizontal="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginVertical="16dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Trung bình: "
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_student_detail_avg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="9.7"
                    android:textSize="12sp"
                    android:textColor="@color/blue_primary"
                    android:textAlignment="center"
                    android:paddingVertical="11dp"
                    android:background="@drawable/bg_score"
                    android:layout_marginHorizontal="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginVertical="16dp"
                tools:ignore="UseSwitchCompatOrMaterialXml">

                <Switch
                    android:id="@+id/sw_student_detail_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:track="@drawable/bg_track"
                    android:thumb="@drawable/bg_thumb" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginVertical="16dp">

                <TextView
                    android:id="@+id/Tvtotal"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Điểm tổng kết: "
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_student_detail_total"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/bg_score"
                    android:paddingVertical="11dp"
                    android:text="9.7"
                    android:visibility="gone"
                    android:textAlignment="center"
                    android:textColor="@color/blue_primary"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>