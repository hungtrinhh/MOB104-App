<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="215dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    android:layout_margin="8dp"
    android:id="@+id/item_student">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="?android:selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ic_student"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/ic_student"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/tv_student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyen Van A "
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_marginHorizontal="16dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:ellipsize="end"/>

            <ImageView
                android:id="@+id/option"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:padding="12dp"
                android:src="@drawable/ic_action_setting"
                android:layout_gravity="end"
                android:background="?android:selectableItemBackgroundBorderless"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginVertical="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DGTX: "
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_regular_score1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="9.7"
                android:textSize="12sp"
                android:textColor="@color/blue_primary"
                android:textAlignment="center"
                android:paddingVertical="11dp"
                android:background="@drawable/bg_score"
                android:layout_marginHorizontal="16dp"/>

            <TextView
                android:id="@+id/tv_regular_score2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="9.7"
                android:textSize="12sp"
                android:textColor="@color/blue_primary"
                android:textAlignment="center"
                android:paddingVertical="11dp"
                android:background="@drawable/bg_score"
                android:layout_marginHorizontal="16dp"/>

            <TextView
                android:id="@+id/tv_regular_score3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="9.7"
                android:textSize="12sp"
                android:textColor="@color/blue_primary"
                android:textAlignment="center"
                android:paddingVertical="11dp"
                android:background="@drawable/bg_score"
                android:layout_marginHorizontal="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giữa kỳ: "
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_midterm_score"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="9.7"
                android:textSize="12sp"
                android:textColor="@color/blue_primary"
                android:textAlignment="center"
                android:paddingVertical="11dp"
                android:background="@drawable/bg_score"
                android:layout_marginHorizontal="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuối kỳ: "
                android:layout_marginStart="16dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_final_score"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="9.7"
                android:textSize="12sp"
                android:textColor="@color/blue_primary"
                android:textAlignment="center"
                android:paddingVertical="11dp"
                android:background="@drawable/bg_score"
                android:layout_marginHorizontal="24dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>