<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EasyEdu" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!-- Button Style-->
    <style name="NormalButton" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="backgroundTint">@color/blue_primary</item>
        <item name="cornerRadius">40dp</item>
        <item name="rippleColor">@color/bg_primary</item>
    </style>

    <style name="OutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/blue_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="cornerRadius">40dp</item>
        <item name="strokeColor">@color/blue_primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="rippleColor">@color/blue_primary</item>
    </style>

    <style name="GoogleButton" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">40dp</item>
        <item name="rippleColor">@color/bg_primary</item>
        <item name="icon">@drawable/ic_google</item>
        <item name="iconGravity">start</item>
        <item name="iconTint">@null</item>
        <item name="android:paddingStart">16dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Style Edit Text-->
    <style name="EditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/bg_ed_text</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">16dp</item>
    </style>
</resources>